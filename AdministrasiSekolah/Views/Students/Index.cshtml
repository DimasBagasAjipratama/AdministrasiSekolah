@model IEnumerable<AdministrasiSekolah.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center" style="font-size:64px">Data Siswa</h2>
<br />
<br />
<p class="text-right">
    <a asp-action="Create"> <span class="glyphicon-plus"></span>Tambah Data Student Baru</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Student")
            </th>
            <th>
                @Html.DisplayName("Kelas")
            </th>
            <th>
                @Html.DisplayName("Angkatan")
            </th>
            <th>
                @Html.DisplayName("Gender")
            </th>
            <th>
                @Html.DisplayName("Alamat")
            </th>
            <th>
                @Html.DisplayName("Password")
            </th>
            <th>
                @Html.DisplayName("Nama Ayah")
            </th>
            <th>
                @Html.DisplayName("IdUser")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamaStudent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kelas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Angkatan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alamat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdParentNavigation.IdParent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUserNavigation.IdUser)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Nis">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Nis">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Nis">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
