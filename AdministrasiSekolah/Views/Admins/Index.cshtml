@model IEnumerable<AdministrasiSekolah.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<h2>Data Admin</h2>

<p>
    <a asp-action="Create">Tambah Data Admin Baru</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("NamaAdmin")
            </th>
            <th>
                @Html.DisplayName("Password")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAdmin"><i class="material-icons">create</i> </a> |
                <a asp-action="Details" asp-route-id="@item.IdAdmin"><i class="material-icons">list_alt</i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdAdmin"><i class="material-icons">delete</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
