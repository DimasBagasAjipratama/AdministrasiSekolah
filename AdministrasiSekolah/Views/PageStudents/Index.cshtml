
@model IEnumerable<AdministrasiSekolah.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

@using (Html.BeginForm("index","kendaraan", FormMethod.Get))
{
    <p>
        NamaStudent: @Html.DropDownList("ktsd","NamaStudent")
        Cari Data : @Html.TextBox("searchString")
        <input type="submit" value="Filter"/>
    </p>
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/w3.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body style="padding-top:0px; padding-bottom:0px">
    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            Close &times;
        </button>
        <h3 class="w3-bar-item">Administrasi Sekolah</h3>
        <a class="w3-bar-item w3-button" asp-area="" asp-controller="PageStudents" asp-action="Index">Student</a>
        <br />
        <br />
        <br />
        <br />
        <br />
        <a class="w3-bar-item w3-button" asp-area="" asp-controller="Login">Logout</a>


    </div>



    <div id="main">

        <div class="w3-teal" style="display:flex">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div class="w3-container" style="display:flex">
                <h1 style="margin-right:850px">Administrasi Sekolah </h1>
                <!--<partial name="_LoginPartial" />-->
            </div>

        </div>



        <div style="width:90%; margin:auto;">
            <h2 class="text-center" style="font-size:64px">Data Siswa</h2>
            <br />
            <br />
            <br />
            <table class="table table-striped" border="1">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayName("NIS")
                        </th>
                        <th>
                            @Html.DisplayName("Nama Student")
                        </th>
                        <th>
                            @Html.DisplayName("Kelas")
                        </th>
                        <th>
                            @Html.DisplayName("Angkatan")
                        </th>
                        <th>
                            @Html.DisplayName("Gender")
                        </th>
                        <th>
                            @Html.DisplayName("Alamat")
                        </th>
                        <th>
                            @Html.DisplayName("Password")
                        </th>
                        <th>
                            @Html.DisplayName("Nama Ayah")
                        </th>
                        <th>
                            @Html.DisplayName("Username")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nis)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NamaStudent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kelas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Angkatan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Alamat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdParentNavigation.NamaAyah)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdUserNavigation.Username)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <footer>
                <p>&copy; 2020 - AdministrasiSekolah</p>
            </footer>

        </div>
    </div>


    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "25%";
            document.getElementById("mySidebar").style.width = "25%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }
    </script>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    


</body>
</html>



